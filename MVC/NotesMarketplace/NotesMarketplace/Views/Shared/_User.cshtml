<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Google Fonts Open Sans -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <!-- Bootstrap CSS -->
    <!-- Custom CSS -->
    <!-- Responsive CSS -->
    @Styles.Render("~/Content/pagedList")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/lib")

</head>
@{
    int userId = (int)Session["userId"];
    NotesMarketplaceEntities data = new NotesMarketplaceEntities();
    UserInfo u = data.UserInfoes.Where(m =>m.UserID == userId).FirstOrDefault();
}
<body>
    <div class="main-container">
        <div class="wrapper">
            <header class="site-header">
                <div class="container header-wrapper">
                    <div class="logo-wrapper">

                        <a href="#" title="Site Logo">
                            <!--<img src="../../images/pre-login/top-logo.png" alt="logo" id="logo-default">-->
                            <img src="../../images/images/logo.png" class="img-responsive" alt="logo" id="logo">
                        </a>
                        <!-- Mobile Menu Open Button-->
                        <span id="mobile-nav-open-btn">&#9776;</span>
                    </div>
                    <div class="navigation-wrapper">
                        <nav class="main-nav">
                            <ul class="menu-navigation">
                                <li>
                                    @Html.ActionLink("Search Notes", "SearchNotes")
                                </li>
                                <li>
                                    @Html.ActionLink("Sell Your Notes", "Dashboard")
                                </li>
                                <li>
                                    @Html.ActionLink("Buyer Request", "BuyerRequests")
                                </li>
                                <li>
                                    @Html.ActionLink("FAQ", "Faq")
                                </li>
                                <li>
                                    @Html.ActionLink("Contact Us", "ContactUs")
                                </li>


                                <div class="dropdown navigation-submenu">
                                    <button class="btn btn-secondary dropdown-toggle button-with-image" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img id="navigation-img" src="/Uploads/@Path.GetFileName(u.ProfilePicture)" class="img-circle" alt="user-img">
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        @Html.ActionLink("My Profile", "MyProfile", "User", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Downloads", "MyDownloads", "User", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Sold Notes", "MySoldNotes", "User", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Rejected Notes", "MyRejectedNotes", "User", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Change Password", "ChangePassword", "Auth", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Logout", "Logout", "Auth", null, new { @class = "dropdown-item", @id = "submenu-logout" })
                                    </div>
                                </div>

                                @*<button type="submit" class="btn btn-primary" id="logout">*@
                                @Html.ActionLink("Logout", "Logout", "Auth", null, new { @class = "btn btn-primary", @id = "logout" })
                                @*</button>*@
                            </ul>
                        </nav>
                    </div>


                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <!-- Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">

                                <li><a class="smooth-scroll" href="/User/SearchNotes">Search Notes</a></li>
                                <li><a class="smooth-scroll" href="/User/Dashboard">Sell Your Notes</a></li>
                                <li><a class="smooth-scroll" href="/User/BuyerRequests">Buyer Request</a></li>
                                <li><a class="smooth-scroll" href="/User/Faq">FAQ</a></li>
                                <li><a class="smooth-scroll" href="/User/ContactUs">Contact Us</a></li>
                                <li id="profile-menu">
                                    <img id="navigation-mobile-img" src="/Uploads/@Path.GetFileName(u.ProfilePicture)" style="max-width:41px; max-height:41px;" class="img-circle" alt="user-img">
                                    <div class="profile-submenu">
                                        @Html.ActionLink("My Profile", "MyProfile", "User", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Downloads", "MyDownloads", "User", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Sold Notes", "MySoldNotes", "User", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Rejected Notes", "MyRejectedNotes", "User", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Change Password", "ChangePassword", "Auth", null, new { @class = "dropdown-item" })
                                    </div>
                                </li>
                                <a href="/Auth/Logout"><button type="submit" class="btn btn-primary navigation-logout">Logout</button></a>

                            </ul>
                        </div>
                    </div>


                </div>
            </header>

        </div>


        @RenderBody()
        <!-- Footer -->
        <footer id="footer">
            <hr>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p>
                            Copyright &copy; TatvaSoft All rights reserved.
                            <span class="social">
                                <a href="https://www.facebook.com/NotesMarketPlace"><i class="fa fa-facebook"></i></a>
                                <a href="https://twitter.com/NotesMarketPlace"><i class="fa fa-twitter"></i></a>
                                <a href="https://www.linkedin.com/NotesMarketPlace"><i class="fa fa-linkedin"></i></a>
                            </span>
                        </p>
                    </div>
                </div>
            </div>

        </footer>
        </div>

        <!-- Footer Ends -->
        <!-- JQuery -->
        <!-- Bootstrap JS -->
        <!-- Custom JS -->
        @Scripts.Render("~/Scripts")
        @Scripts.Render("~/libs")
</body>

<script type="text/javascript">
    $(function () {
        $('.navigation-submenu').on('click', function () {
            $(this).toggleClass('open');
        });
    });
</script>
</html>