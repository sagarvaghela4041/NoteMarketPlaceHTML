<!DOCTYPE html>

<html lang="en">

<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Google Fonts Open Sans -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <!-- Bootstrap CSS -->
    <!-- Custom CSS -->
    <!-- Responsive CSS -->
    @Styles.Render("~/Content/css")

</head>

<body>

    <div class="wrapper">
        <header class="site-header">
            <div class="container header-wrapper">
                <div class="logo-wrapper">

                    <a href="#" title="Site Logo">
                        <!--<img src="../../images/pre-login/top-logo.png" alt="logo" id="logo-default">-->
                        <img src="../../images/images/logo.png" class="img-responsive" alt="logo" id="logo">
                    </a>
                    <!-- Mobile Menu Open Button-->
                    <span id="mobile-nav-open-btn">&#9776;</span>
                </div>
                <div class="navigation-wrapper">
                    <nav class="main-nav">
                        <ul class="menu-navigation">
                            <li>
                                @Html.ActionLink("Search Notes", "SearchNotes")
                            </li>
                            <li>
                                @Html.ActionLink("Sell Your Notes", "Dashboard", "User")
                            </li>
                            <li>
                                @Html.ActionLink("FAQ", "Faq","Static")
                            </li>
                            <li>
                                @Html.ActionLink("Contact Us", "ContactUs","Static")
                            </li>

                            @*<button type="submit" class="btn btn-primary" id="logout">Login</button>*@
                            @Html.ActionLink("Login", "Login", "Auth", null, new { @class = "btn btn-primary", @id = "logout" })
                        </ul>
                    </nav>
                </div>


                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="nav">

                            <li><a class="smooth-scroll" href="#home">Search Notes</a></li>
                            <li><a class="smooth-scroll" href="#home">Sell Your Notes</a></li>
                            <li><a class="smooth-scroll" href="#portfolio">FAQ</a></li>
                            <li><a class="smooth-scroll" href="#portfolio">Contact Us</a></li>
                            <li><a class="smooth-scroll" href="#contact">Login</a></li>

                        </ul>
                    </div>
                </div>


            </div>
        </header>
    </div>

    @RenderBody()


    <!-- Footer -->
    <footer id="footer">
        <hr>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>
                        Copyright &copy; TatvaSoft All rights reserved.
                        <span class="social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                        </span>
                    </p>
                </div>
            </div>
        </div>



    </footer>
    <!-- Footer Ends -->
    <!-- JQuery -->
    <!-- Bootstrap JS -->
    <!-- Custom JS -->
    @Scripts.Render("~/Scripts")


</body>

</html>