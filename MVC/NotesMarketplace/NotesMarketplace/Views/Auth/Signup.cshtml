@model NotesMarketplace.User
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<div class="bg-signup">

    <div class="container" id="signup-main">
        <!-- Logo Image -->
        <div class="row text-center" id="login-logo">
            <div class="col-md-12">
                <img src="../../images/pre-login/top-logo.png" alt="Logo">
            </div>
        </div>
        <!-- Login wrapper -->
        <div class="row" id="login-wrapper">
            <div class="col-md-12 text-center" id="login-header">

                <div class="col-md-12">
                    <h1>Create an Account</h1>
                    <p>Enter your details to signup</p>
                </div>
            </div>

            <div class="row" id="login-form">
                <div class="col-md-12">
                    @*<span id="signup-sucess"><i class="fa fa-check"></i> Your account has been successfully created.</span>*@
                    @using (Html.BeginForm("Save", "Auth", FormMethod.Post))
                    {
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, "First Name *", new { @class = "login-label", @id = "login-label-email" })
                        <span id="login-error">
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-center" })
                        </span>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control login-input", @id = "signup-first-name", @aria_describedby = "emailHelp", @placeholder = "Enter your first name" })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, "Last Name *", new { @class = "login-label", @id = "login-label-email" })
                        <span id="login-error">
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-center" })
                        </span>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control login-input", @id = "signup-last-name", @aria_describedby = "emailHelp", @placeholder = "Enter your last name" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.EmailID, "Email *", new { @class = "login-label", @id = "login-label-email" })
                        <span id="login-error">
                            @Html.ValidationMessageFor(m => m.EmailID, "", new { @class = "text-center" })
                        </span>
                        @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control login-input", @id = "login-email", @aria_describedby = "emailHelp", @placeholder = "Enter your email address" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, "Password", new { @class = "login-label", @id = "login-label-email" })
                        <span id="login-error">
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-center" })
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control login-input", @id = "new-password", @placeholder = "Enter your password" })
                        <span toggle="#new-password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password", new { @class = "login-label", @id = "login-label-email" })
                        <span id="login-error">
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-center" })
                        </span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control login-input", @id = "confirm-password", @placeholder = "Re-enter your password" })
                        <span toggle="#confirm-password" class="fa fa-fw fa-eye field-icon toggle-password"></span>

                    </div>

                        <button type="submit" class="btn btn-primary" id="login-submit">SIGN UP</button>
                    }
                    <p id="reg-login-question" class="text-center">Already have an account?
                    <span>
                        @Html.ActionLink("Login", "Login");
                    </span></p>
                </div>
            </div>

        </div>
    </div>

</div>