@model NotesMarketplace.User
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<div class="bg">

    <div class="container" id="login-main">
        <!-- Logo Image -->
        <div class="row text-center" id="login-logo">
            <div class="col-md-12">
                <img src="../../images/pre-login/top-logo.png" alt="Logo">
            </div>
        </div>
        <!-- Login wrapper -->
        <div class="row" id="login-wrapper">
            <div class="col-md-12 text-center" id="login-header">

                <div class="col-md-12">
                    <h1>Change Password</h1>
                    <p>Enter your new password to change your password</p>
                </div>

            </div>

            <div class="row" id="login-form">
                <div class="col-md-12">
                    @using (Html.BeginForm("UpdatePassword", "Auth", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, "Old Password", new { @class = "login-label", @id = "login-label-email" })
                            @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control login-input", @id = "old-password", @aria_describedby = "emailHelp", @placeholder = "Enter your old password" })
                            <span toggle="#old-password" class="fa fa-fw fa-eye field-icon toggle-password"></span>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NewPassword, "New Password", new { @class = "login-label", @id = "login-label-email" })
                            @Html.TextBoxFor(m => m.NewPassword, new { @type = "password", @class = "form-control login-input", @id = "new-password", @aria_describedby = "emailHelp", @placeholder = "Enter your new password" })
                            <span toggle="#new-password" class="fa fa-fw fa-eye field-icon toggle-password"></span>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "login-label", @id = "login-label-email" })
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @type = "password", @class = "form-control login-input", @id = "confirm-password", @aria_describedby = "emailHelp", @placeholder = "Enter your confirm password" })
                            <span toggle="#confirm-password" class="fa fa-fw fa-eye field-icon toggle-password"></span>

                        </div>

                        <button type="submit" class="btn btn-primary" id="login-submit-new">SUBMIT</button>
                    }

                </div>
            </div>

        </div>
    </div>

</div>


